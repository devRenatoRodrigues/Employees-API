generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Employees {
 id String  @id @default(auto()) @map("_id") @db.ObjectId
 name String 
 role Role @default(EMPLOYEE)
}

enum Role {
  EMPLOYEE
  MANAGER
}