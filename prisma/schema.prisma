// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Employee {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  role Role   @default(EMPLOYEE)

  @@map("employees")
}

enum Role {
  EMPLOYEE
  MANAGER
}
